# Focus Alacritty
cmd - return : ~/.config/alacritty/find-alacritty.sh

cmd - 1 : osascript -e 'tell application "Chrome" to activate'
cmd - 2 : osascript -e 'tell application "Slack" to activate'
cmd - 3 : osascript -e 'tell application "Rider" to activate'
cmd - 4 : osascript -e 'tell application "Brave" to activate'
cmd - 5 : osascript -e 'tell application "Outlook" to activate'
cmd - 6 : osascript -e 'tell application "Android Studio" to activate'

# cmd - 7 : yabai -m space --focus 1
# cmd - 8 : yabai -m space --focus 2


